generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String  @id @default(uuid())
  clerkId      String  @unique 
  email        String  @unique
  name         String? 
  imageUrl     String? 
  provider     String  // Authentication provider (Google, GitHub, Apple)
  token        String?
  strategy     Strategy?
  createdAt    DateTime @default(now()) 
  updatedAt    DateTime @updatedAt 
  
}

model Strategy{
  id             String   @id @default(uuid())
  duration       String
  maxProfit      Int
  maxLoss        Int
  totalAmount    Int
  userId         String   @unique
  user           User     @relation(fields: [userId],references: [id],onDelete: Cascade)
}

